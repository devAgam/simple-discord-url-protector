{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "src/types"],
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*"],
  "ts-node": {
    "swc": true
  }
}
